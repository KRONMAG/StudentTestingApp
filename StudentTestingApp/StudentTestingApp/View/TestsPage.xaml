<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudentTestingApp.View.TestsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackLayout Spacing="0">
            <Label Style="{StaticResource Header}" Text="Student Testing App" />
            <Label Style="{StaticResource Title}" Text="Тесты" />
        </StackLayout>
        <Label
            x:Name="EmptyTestListLabel"
            Grid.Row="1"
            Style="{StaticResource EmptyListMessage}"
            Text="Список тестов пуст" />
        <ScrollView
            x:Name="TestListScrollView"
            Grid.Row="1"
            IsVisible="False">
            <ListView
                x:Name="TestsListView"
                ItemTapped="TestTapped"
                Style="{StaticResource List}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Style="{StaticResource ListItem}" Text="{Binding Item2}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </Grid>
</ContentPage>