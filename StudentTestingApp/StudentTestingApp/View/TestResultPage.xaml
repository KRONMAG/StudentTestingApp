<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="StudentTestingApp.View.TestResultPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#616161">
    <StackLayout
        Padding="0"
        BackgroundColor="#424242"
        VerticalOptions="Center">
        <Label
            HorizontalTextAlignment="Center"
            Style="{StaticResource Title}"
            Text="Результат тестирования" />
        <Label x:Name="ScoreLabel" Style="{StaticResource Text}" />
        <StackLayout Padding="10">
            <ProgressBar x:Name="ScoreProgressBar" ProgressColor="#FFFFFF" />
        </StackLayout>
        <Label x:Name="ElapsedTimeLabel" Style="{StaticResource Text}" />
        <Button
            Clicked="GoToMainPageClicked"
            HorizontalOptions="Center"
            Style="{StaticResource Command}"
            Text="На главную" />
    </StackLayout>
</ContentPage>