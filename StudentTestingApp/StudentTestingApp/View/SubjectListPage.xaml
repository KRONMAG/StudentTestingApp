<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentTestingApp.View.SubjectListPage">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackLayout Spacing="0">
            <Label Text="Student Testing App" Style="{StaticResource Header}" />
            <Label Text="Предметы" Style="{StaticResource Title}" />
        </StackLayout>
        <Label Grid.Row="1" x:Name="EmptySubjectListLabel" Style="{StaticResource EmptyListMessage}" Text="Список предметов пуст"/>
        <ScrollView Grid.Row="1" x:Name="SubjectListScrollView" IsVisible="False">
            <ListView x:Name="SubjectsListView" Style="{StaticResource List}" ItemTapped="SubjectTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Item2}" Style="{StaticResource ListItem}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </Grid>
</ContentPage>