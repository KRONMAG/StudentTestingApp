<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudentTestingApp.View.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <Grid BackgroundColor="#616161" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ContentView
                Margin="0,50"
                Style="{StaticResource Logo}"
                VerticalOptions="Center" />
            <StackLayout Grid.Row="1" VerticalOptions="Start">
                <Button
                    Clicked="SubjectsViewClicked"
                    ImageSource="edit.png"
                    Style="{StaticResource MenuItem}"
                    Text="Тестирование" />
                <Button
                    Clicked="TestResultsViewClicked"
                    ImageSource="chart.png"
                    Style="{StaticResource MenuItem}"
                    Text="Результаты" />
                <Button
                    Clicked="UpdateTestsClicked"
                    ImageSource="download.png"
                    Style="{StaticResource MenuItem}"
                    Text="Обновление тестов" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>