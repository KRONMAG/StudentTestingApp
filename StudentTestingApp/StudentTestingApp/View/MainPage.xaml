<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentTestingApp.View.MainPage">
    <ScrollView>
        <Grid RowSpacing="0" BackgroundColor="#616161">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackLayout VerticalOptions="Center" Margin="0, 50">
                <Label Text="Student" Style="{StaticResource Logo}" />
                <Label Text="Testing" Style="{StaticResource Logo}" />
                <Label Text="App" Style="{StaticResource Logo}" />
            </StackLayout>
            <StackLayout Grid.Row="1" VerticalOptions="Start">
                <Button Text="Тестирование" ImageSource="edit.png" Style="{StaticResource MenuItem}" Clicked="SubjectListViewClicked"/>
                <Button Text="Результаты" ImageSource="chart.png" Style="{StaticResource MenuItem}"/>
                <Button Text="Настройки" ImageSource="settings.png" Style="{StaticResource MenuItem}" Clicked="SettingsViewClicked"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>