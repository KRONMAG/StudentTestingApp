<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudentTestingApp.View.TestStartPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#616161">
    <StackLayout BackgroundColor="#424242" VerticalOptions="Center">
        <Label
            x:Name="NameLabel"
            HorizontalTextAlignment="Center"
            Style="{StaticResource Title}" />
        <Label
            x:Name="QuestionCountLabel"
            HorizontalOptions="Center"
            Style="{StaticResource Text}" />
        <Label
            x:Name="DurationLabel"
            HorizontalOptions="Center"
            Style="{StaticResource Text}" />
        <Button
            x:Name="StartTestButton"
            Clicked="StartTestClicked"
            HorizontalOptions="Center"
            Style="{StaticResource Command}"
            Text="Начать" />
    </StackLayout>
</ContentPage>