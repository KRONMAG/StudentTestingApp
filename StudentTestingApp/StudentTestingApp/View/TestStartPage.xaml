<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentTestingApp.View.TestStartPage"
             BackgroundColor="#616161">
    <StackLayout BackgroundColor="#424242" VerticalOptions="Center">
        <Label x:Name="NameLabel" Style="{StaticResource Title}" HorizontalTextAlignment="Center" />
        <Label x:Name="QuestionCountLabel" Style="{StaticResource Text}" />
        <Label x:Name="DurationLabel" Style="{StaticResource Text}" />
        <Entry x:Name="StudentNameEntry" Placeholder="ФИО учащегося" TextColor="#FFFFFF"
               HorizontalTextAlignment="Center" />
        <Button Text="Начать" BackgroundColor="#FF0000" TextColor="#FFFFFF" HorizontalOptions="Center"
                Clicked="StartTestClicked" />
    </StackLayout>
</ContentPage>